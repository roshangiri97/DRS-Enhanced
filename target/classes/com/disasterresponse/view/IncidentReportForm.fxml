<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.disasterresponse.controller.IncidentReportController" style="-fx-padding: 40; -fx-background-color: white; -fx-background-radius: 10; -fx-border-color: #ddd; -fx-border-radius: 10;">
    
    <!-- Title -->
    <Label text="Submit Incident Report" style="-fx-font-size: 22px; -fx-font-weight: bold;" />
    
    <GridPane alignment="CENTER" hgap="10" vgap="15" style="-fx-background-color: #f5f5f5; -fx-background-radius: 10; -fx-padding: 20;">
        
        <!-- Location -->
        <Label text="Location:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-size: 14px;"/>
        <TextField fx:id="locationField" editable="false" GridPane.rowIndex="0" GridPane.columnIndex="1" style="-fx-background-radius: 10px; -fx-pref-width: 300px;"/>

        <!-- Type -->
        <Label text="Type:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-size: 14px;"/>
        <TextField fx:id="typeField" editable="false" GridPane.rowIndex="1" GridPane.columnIndex="1" style="-fx-background-radius: 10px; -fx-pref-width: 300px;"/>

        <!-- Evacuations -->
        <Label text="Evacuations:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-size: 14px;"/>
        <TextField fx:id="evacuationsField" GridPane.rowIndex="2" GridPane.columnIndex="1" style="-fx-background-radius: 10px; -fx-pref-width: 300px;"/>

        <!-- Rescued -->
        <Label text="Rescued:" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-font-size: 14px;"/>
        <TextField fx:id="rescuedField" GridPane.rowIndex="3" GridPane.columnIndex="1" style="-fx-background-radius: 10px; -fx-pref-width: 300px;"/>

        <!-- Casualties -->
        <Label text="Casualties:" GridPane.rowIndex="4" GridPane.columnIndex="0" style="-fx-font-size: 14px;"/>
        <TextField fx:id="casualtiesField" GridPane.rowIndex="4" GridPane.columnIndex="1" style="-fx-background-radius: 10px; -fx-pref-width: 300px;"/>

        <!-- Property Damage -->
        <Label text="Property Damage:" GridPane.rowIndex="5" GridPane.columnIndex="0" style="-fx-font-size: 14px;"/>
        <TextField fx:id="propertyDamageField" GridPane.rowIndex="5" GridPane.columnIndex="1" style="-fx-background-radius: 10px; -fx-pref-width: 300px;"/>

        <!-- Infrastructure Impact -->
        <Label text="Infrastructure Impact:" GridPane.rowIndex="6" GridPane.columnIndex="0" style="-fx-font-size: 14px;"/>
        <TextField fx:id="infrastructureImpactField" GridPane.rowIndex="6" GridPane.columnIndex="1" style="-fx-background-radius: 10px; -fx-pref-width: 300px;"/>

        <!-- Relief Actions -->
        <Label text="Relief Actions:" GridPane.rowIndex="7" GridPane.columnIndex="0" style="-fx-font-size: 14px;"/>
        <TextField fx:id="reliefActionsField" GridPane.rowIndex="7" GridPane.columnIndex="1" style="-fx-background-radius: 10px; -fx-pref-width: 300px;"/>

        <!-- Teams Involved -->
        <Label text="Teams Involved:" GridPane.rowIndex="8" GridPane.columnIndex="0" style="-fx-font-size: 14px;"/>
        <TextField fx:id="teamsInvolvedField" editable="false" GridPane.rowIndex="8" GridPane.columnIndex="1" style="-fx-background-radius: 10px; -fx-pref-width: 300px;"/>

        <!-- Witness Statement -->
        <Label text="Witness Statement:" GridPane.rowIndex="9" GridPane.columnIndex="0" style="-fx-font-size: 14px;"/>
        <TextArea fx:id="witnessStatementField" GridPane.rowIndex="9" GridPane.columnIndex="1" style="-fx-background-radius: 10px; -fx-pref-width: 300px; -fx-pref-height: 80px;"/>

        <!-- Report Date -->
        <Label text="Report Date:" GridPane.rowIndex="10" GridPane.columnIndex="0" style="-fx-font-size: 14px;"/>
        <TextField fx:id="reportDateField" editable="false" GridPane.rowIndex="10" GridPane.columnIndex="1" style="-fx-background-radius: 10px; -fx-pref-width: 300px;"/>

    </GridPane>

    <!-- Submit Button -->
    <Button text="Submit Report" onAction="#handleSubmitReportAction" style="-fx-background-color: #000000; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 10px;"/>
</VBox>
